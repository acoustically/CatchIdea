<% if(Content.find_by(participant_id: @participant.id, user_id: session[:id]).nil?) %>
	<%= form_tag({action: :add_opinion, id: @participant.id}) do %>
		<%= text_area_tag(:opinion, nil, id: "tinyMCE") %>
		<%= submit_tag(:Create, class:  "btn btn-default btn-lg center") %>
	<% end %>
<% else %>
	<%= Content.find_by(participant_id: @participant.id, user_id: session[:id]).opinion.html_safe %>	
<% end %>
