<div id = "part_friends<%= @stand_by_num %>">
	<%= form_tag({action: :add_participant}, remote: true) do %>
		<%= @participant.name %>
		<%= hidden_field_tag(:index, @stand_by_num) %>
		<%= hidden_field_tag(:participant, @participant.id) %>
		<%= image_submit_tag("/assets/add_icon.png", width: 45, height: 45, class: "add_icon") %> <br /><br />
	<% end %>
</div>
