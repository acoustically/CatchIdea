<% content_for :idea_header do %>
	<form action = "/ideas/update/<%= @idea.id %>" data-remote = "true"  class="form-inline">
		<%= text_field_tag :idea_name, nil, placeholder: "Idea name", class: "form-control input-lg" %>
		<%= submit_tag("Change", class: "btn btn-default btn-lg") %>
	</form><br /><br />
<% end %>
<% content_for :idea_contents do %>
	<%= form_for(Content.new, url: url_for(controller: :ideas, action: :update_discription, id: @idea.id)) do |idea| %>
		<% if @idea.discription.nil? %>
			<%= text_area_tag(:discription, nil, id: :tinyMCE) %>
		<% else %>
			<%= text_area_tag(:discription, @idea.discription.html_safe, id: :tinyMCE) %>
		<% end %>
		<%= idea.submit("New Idea", class: "btn btn-default btn-lg center") %>
	<% end %>
<% end %>
<% content_for :participants do %>
	<div class = "add_participant">
		<h1>Add participant</h1>
		<%= form_tag({action: :add_participant_in_edit, id: @idea.id}, remote: true) do %>
			<%= text_field_tag(:participant_email, nil, placeholder: "email", class: "form-control input-lg") %>
			<%= image_submit_tag("/assets/add_icon.png", width: 50, height: 50) %>
		<% end %>
	</div><hr />
	<% @idea.participants.each do |participant| %>
		<h2 style = "padding-left:20px;"><%= User.find_by(id: participant.user_id).name %></h2>
	<% end %><hr />
	<div id = "participants">
	</div>
<% end %>

